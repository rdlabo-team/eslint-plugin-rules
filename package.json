{
  "name": "@rdlabo/eslint-plugin-rules",
  "version": "1.0.0-1",
  "description": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "lint": "run-s lint:ts lint:eslint lint:prettier",
    "lint:ts": "npm run build -- --noEmit",
    "lint:eslint": "eslint '**/*.{js,ts}'",
    "lint:prettier": "prettier '**/*.{js,ts,yaml}' --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "prettier '**/*.{js,ts,yaml}' --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prerelease": "npm run build",
    "release": "np",
    "add-rule": "ts-node scripts/add-rule",
    "update": "ts-node scripts/update",
    "inspect": "npx @eslint/config-inspector"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "devDependencies": {
    "@angular-eslint/template-parser": "^19.0.0",
    "@angular-eslint/test-utils": "^19.0.2",
    "@angular/compiler": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@types/eslint": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/rule-tester": "^8.18.0",
    "@typescript-eslint/utils": "^8.18.0",
    "eslint": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.1",
    "np": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "~5.4.5",
    "typescript-eslint": "^8.18.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdlabo-team/eslint-rules.git"
  },
  "keywords": [
    "typescript",
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "Masahiko Sakakibara<sakakibara@rdlabo.jp>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdlabo-team/eslint-rules/issues"
  }
}
